<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_menu">

    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:backgroundTint="#000"
        android:fontFamily="@font/gmarketsansttflight"
        android:text="설정"
        android:textColor="#000"
        android:textSize="13dp"
        app:backgroundTint="#F2CA50"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonIntroduce"
        app:layout_constraintVertical_bias="0.438" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#000"
        android:fontFamily="@font/gmarketsansttflight"
        android:text="Logout"
        android:textColor="#000"
        android:textSize="11dp"
        android:textStyle="bold"
        app:backgroundTint="#F2DC99"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonIntroduce"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="136dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#000"
        android:fontFamily="@font/gmarketsansttflight"
        android:text="어플리케이션 소개"
        android:textColor="#000"
        android:textSize="13dp"
        app:backgroundTint="#F2CA50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonEmergency" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="76dp"
        android:layout_height="71dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonEmergency"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoclock" />

    <Button
        android:id="@+id/buttonEmergency"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:backgroundTint="#000"
        android:fontFamily="@font/gmarketsansttflight"
        android:text="응급상황 알림목록"
        android:textColor="#000"
        android:textSize="13dp"
        app:backgroundTint="#F2CA50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.281" />

    <Button
        android:id="@+id/buttonToilet"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:backgroundTint="#000"
        android:fontFamily="@font/gmarketsansttflight"
        android:text="Time Spent In Toilet"
        android:textColor="#000"
        android:textSize="13dp"
        app:backgroundTint="#F2CA50"
        app:layout_constraintBottom_toBottomOf="@+id/buttonSettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonEmergency"
        app:layout_constraintVertical_bias="0.321" />
</androidx.constraintlayout.widget.ConstraintLayout>